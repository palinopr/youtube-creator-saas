# Frontend Environment Variables
# Copy this file to .env.local for local development

# Backend API URL
# For local development: http://localhost:8000
# For production: Your deployed backend URL (e.g., https://your-app.railway.app)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Examples for different deployment platforms:
#
# Railway:
#   NEXT_PUBLIC_API_URL=https://youtube-saas-backend-production.up.railway.app
#
# Render:
#   NEXT_PUBLIC_API_URL=https://youtube-saas-backend.onrender.com
#
# Heroku:
#   NEXT_PUBLIC_API_URL=https://your-app-backend.herokuapp.com
#
# Vercel (if backend is on same domain with rewrites):
#   NEXT_PUBLIC_API_URL=/api

