# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here

# OpenAI API Key (for AI insights)
OPENAI_API_KEY=your_openai_api_key_here

# App Settings
SECRET_KEY=your_secret_key_for_session_encryption
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Database Configuration
# For local development: Leave unset to use SQLite (automatic)
# For production (PostgreSQL): Set the full connection string
# DATABASE_URL=postgresql://username:password@host:5432/database_name
# 
# Examples:
#   - Railway: Use the DATABASE_URL provided in your Railway dashboard
#   - Heroku: postgres://... (automatically converted to postgresql://)
#   - Render: postgresql://user:pass@host/dbname
#   - Local PostgreSQL: postgresql://localhost:5432/youtube_saas

# YouTube API Scopes (don't change these)
YOUTUBE_READONLY_SCOPE=https://www.googleapis.com/auth/youtube.readonly
YOUTUBE_ANALYTICS_SCOPE=https://www.googleapis.com/auth/yt-analytics.readonly

